
<h1><%= title %></h1>

<section>
    <h3>Posts</h3>
    <%if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3"></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>

    <!-- showing posts -->
    <div id="posts-lists-container">
        <ul>
            <% for(post of posts){%>
                <li>
                    <p>
                        <%=post.content%><br>
                        <small>Posted by: <%=post.user.name%></small>   
                    </p>
                    <div class="post-comment">
                        <%if(locals.user){%>
                            <form action="/comments/create" method="POST" id="comment-form">
                                <input type="text" name="content" placeholder="Add your comment...">
                                <input type="hidden" name="post" value="<%=post._id%>">
                                <input type="submit" value="Add Comment">
                            </form>
                        <%}%>

                        <div class="post-comments-list">
                            <ul id="post-comments-<%post._id%>">
                                <%for(comment of post.comments){ %>
                                    <li>
                                        <p>
                                            <%=comment.content%><br>
                                            <small>Commented by: <%=comment.user.name%></small> 
                                        </p>
                                    </li>
                                <%}%>
                            </ul>
                        </div>
                        
                    </div>
                </li>
            <%}%>
        </ul>
    </div>
</section>

