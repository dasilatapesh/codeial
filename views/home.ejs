
<h1><%= title %></h1>

<section>
    <h3>Posts</h3>
    <%if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3"></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>

    <!-- showing posts -->
    <div id="posts-lists-container">
        <ul>
            <% for(post of posts){%>

                <%- include('_posts'); -%>
                
            <%}%>
        </ul>
    </div>
</section>

